<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" id="AnchorPane" prefWidth="400.0" scaleShape="false" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="farmmanagement.controllers.AddItemController">
    <children>
        <VBox prefWidth="400.0">
            <children>
                <Label text="Add Item">
                    <font>
                        <Font size="50.0" />
                    </font>
                </Label>
                <VBox prefHeight="60.0" prefWidth="380.0">
                    <children>
                        <Label text="Name" />
                        <TextField fx:id="nameField" layoutX="150" layoutY="50" promptText="" />
                    </children>
                </VBox>
                <VBox prefHeight="60.0" prefWidth="380.0">
                    <children>
                        <Label text="Price" />
                        <TextField fx:id="priceField" layoutX="150" layoutY="50" promptText="" />
                    </children>
                </VBox>
                <VBox layoutX="20.0" layoutY="142.0" prefHeight="60.0" prefWidth="380.0">
                    <children>
                        <Label text="Item Container" />
                        <ComboBox prefWidth="400.0" fx:id="itemContainerDropdown"/>
                    </children>
                </VBox>
                <VBox prefHeight="60.0" prefWidth="380.0">
                    <children>
                        <Label text="Position X" />
                        <TextField fx:id="positionXField" layoutX="150" layoutY="50" promptText="" />
                    </children>
                </VBox>
                <VBox prefHeight="60.0" prefWidth="380.0">
                    <children>
                        <Label text="Position Y" />
                        <TextField fx:id="positionYField" layoutX="150" layoutY="50" promptText="" />
                    </children>
                </VBox>
                <VBox layoutX="20.0" layoutY="262.0" prefHeight="60.0" prefWidth="380.0">
                    <children>
                        <Label text="Length" />
                        <TextField fx:id="lengthField" layoutX="150" layoutY="50" promptText="" />
                    </children>
                </VBox>
                <VBox layoutX="20.0" layoutY="316.0" prefHeight="60.0" prefWidth="380.0">
                    <children>
                        <Label text="Width" />
                        <TextField fx:id="widthField" layoutX="150" layoutY="50" promptText="" />
                    </children>
                </VBox>
                <VBox layoutX="20.0" layoutY="326.0" prefHeight="60.0" prefWidth="380.0">
                    <children>
                        <Label text="Height" />
                        <TextField fx:id="heightField" layoutX="150" layoutY="50" promptText="" />
                    </children>
                </VBox>
                <Button fx:id="addItemBtn" onAction="#handleAddItem" mnemonicParsing="false" text="Add Item" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
